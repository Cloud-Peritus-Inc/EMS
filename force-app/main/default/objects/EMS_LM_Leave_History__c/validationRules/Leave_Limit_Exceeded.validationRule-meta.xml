<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Leave_Limit_Exceeded</fullName>
    <active>false</active>
    <description>Insufficient Leave Balance</description>
    <errorConditionFormula>AND(ISPICKVAL(EMS_LM_Leave_Type__r.EMS_LM_Leave_Type__c, &apos;Maternity Leave&apos;),
