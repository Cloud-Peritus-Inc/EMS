<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>EMS_LM_Leave_Start_Date__c</field>
        <field>EMS_LM_Leave_End_Date__c</field>
        <field>EMS_LM_Leave_Type__c</field>
        <field>EMS_LM_Day__c</field>
        <field>EMS_LM_Reason__c</field>
        <field>EMS_LM_Remarks__c</field>
        <field>Current_Leave_Balance__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>EMS_LM_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Leave Approval Request Sent for Higher Roles</label>
        <name>Leave_Approval_Request_Sent_for_Higher_Roles</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Leave_Request_To_RM_PM</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Approved_Date_Update12</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>statusApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Reject_Date_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>statusRejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Leave_requested_by_Higher_Roles</name>
            <type>Alert</type>
        </action>
        <action>
            <name>pendingstatus</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Leave Approver for Higher Roles</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>cancel</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Cancel_Update_Date</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
