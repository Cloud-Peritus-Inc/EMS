<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Current_Leave_Balance__c</field>
        <field>EMS_LM_Leave_Start_Date__c</field>
        <field>EMS_LM_Leave_End_Date__c</field>
        <field>EMS_LM_Leave_Type__c</field>
        <field>EMS_LM_Reason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Approver_2_Pending</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>EMS_LM_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>EMS_LM_2nd_Approver__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <label>Next Approver</label>
        <name>Next_Approver</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <emailTemplate>unfiled$public/Leave_Request_To_RM_PM</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approval_Date_update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approvedreq</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Leave_Approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Leave_Rejected_by_Approver_2</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Rejectedreq</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Rejection_Date_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Leave_Request_Submitted</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Request_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Leave Approval Process</label>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>Cancel_Date_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Cancel_Update</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
