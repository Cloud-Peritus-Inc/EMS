    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    
    <div>
        <p>This is the Record ID: {!v.recordId}</p>
        <!-- You can use this recordId to fetch and display relevant record details here -->
    </div>
</aura:component>